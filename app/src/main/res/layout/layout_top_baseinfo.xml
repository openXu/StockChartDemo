<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin">

    <!--名称和代码-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_top_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_top_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_top_pricelinear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.4">
        <TextView
            android:id="@+id/tv_top_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停牌"
            android:textColor="#333333"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/ll_top_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_top_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#fff15454"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_top_price_addvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#fff15454"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_top_price_addp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="--"
                    android:textColor="#fff15454"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!--今开、最高-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:gravity="left">

        <TextView
            android:id="@+id/tv_top_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今开 --"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_top_heigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最高 --"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>

    <!--成交、最低-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:gravity="left">

        <TextView
            android:id="@+id/tv_top_vol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成交 --"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_top_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最低 --"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>


    <!--换手、振幅-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:gravity="left">

        <TextView
            android:id="@+id/tv_top_turnover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换手 --"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_top_amplitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="振幅 --"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/icon_back"
        android:background="@drawable/selector_btn"/>
</LinearLayout>